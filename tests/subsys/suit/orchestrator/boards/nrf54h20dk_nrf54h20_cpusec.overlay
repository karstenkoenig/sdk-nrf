/ {
	chosen {
		zephyr,entropy = &psa_rng;
	};

	psa_rng: psa-rng {
		compatible = "zephyr,psa-crypto-rng";
		status = "okay";
	};
};

&secdom_nvs {
	partitions {
		compatible = "fixed-partitions";
		#address-cells = <1>;
		#size-cells = <1>;

		/* Use the last 32 kB of SecDom NVM storage. */
		suit_storage: partition@1e7000 {
			label = "suit_storage";
			reg = <0x1e7000 DT_SIZE_K(32)>;
		};
	};
};

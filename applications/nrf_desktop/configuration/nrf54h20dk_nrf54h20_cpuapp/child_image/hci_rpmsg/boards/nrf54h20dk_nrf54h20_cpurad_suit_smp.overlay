#include "../../../nrf54h20dk_cpurad_memory_map.dtsi"

/ {
	chosen {
		zephyr,console = &uart135;
	};
};

/* Configure permission of RAM3X DMA node used by Radio core UART driver. */
&ram3x_dma_region {
	compatible = "nordic,allocatable-ram";
	perm-write;
	perm-read;
};

/* Enable RAM3X DMA CPURAD subnode used by Radio core UART driver. */
&ram3x_cpurad {
	status = "okay";
};

/* Configure Radio core UART. */
&uart135 {
	status = "okay";
	memory-regions = <&ram3x_cpurad>;
};

DT_COMPAT_NORDIC_SENSOR_STUB := nordic,sensor-stub

menuconfig SENSOR_STUB
	bool "Simplest sensor simulator"
	default y if $(dt_compat_enabled,$(DT_COMPAT_NORDIC_SENSOR_STUB))
	help
	  Enable simplest sensor simulator that just calls callback to generate the value.

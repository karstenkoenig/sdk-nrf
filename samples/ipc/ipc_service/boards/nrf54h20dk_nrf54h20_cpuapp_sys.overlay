#include <common/nordic_nrf_next/nrfx_ram3x_dma.dtsi>
#include "shared/nrf54_ipc_shm_ram0.dtsi"
#include "shared/nrf54_uart_pinout.dtsi"

/{
	chosen {
		zephyr,console = &uart136;
	};

	ipc0: ipc0 {
		compatible = "zephyr,ipc-openamp-static-vrings";
		memory-region = <&ipc_shm_ram>;
		mboxes = <&vevif_cpusys 12>,
			 <&bellboard_cpuapp 6>;
		mbox-names = "tx", "rx";
		role = "host";
		status = "okay";
	};
};

&vevif_cpusys {
	status = "okay";
};

/* ram3x_cpuapp buffer is used by App core UART driver. */
&ram3x_cpuapp {
	status = "okay";
};

&uart136 {
	status = "okay";
	memory-regions = <&ram3x_cpuapp>;
};

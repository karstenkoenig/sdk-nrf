source "Kconfig.zephyr"

config APP_INCLUDE_REMOTE_IMAGE
	bool "Include net image as sub image"
	depends on SOC_NRF5340_CPUAPP || SOC_NRF54H20_CPUAPP
	default y if (BOARD_NRF5340DK_NRF5340_CPUAPP || BOARD_NRF5340DK_NRF5340_CPUAPP_NS)
	default y if BOARD_NRF54H20DK_NRF54H20_CPUAPP
	select PARTITION_MANAGER_ENABLED if SOC_NRF5340_CPUAPP
	select BOARD_ENABLE_CPUNET if (BOARD_NRF5340DK_NRF5340_CPUAPP || BOARD_NRF5340DK_NRF5340_CPUAPP_NS)

config APP_REMOTE_BOARD
	string "The name of the CORE to be used by remote image"
	depends on APP_INCLUDE_REMOTE_IMAGE
	default DOMAIN_CPUNET_BOARD if (BOARD_NRF5340DK_NRF5340_CPUAPP || BOARD_NRF5340DK_NRF5340_CPUAPP_NS)
	default "nrf54h20dk_nrf54h20_cpuppr@soc1" if (BOARD_NRF54H20DK_NRF54H20_CPUAPP && HW_REVISION_SOC1)

menuconfig APP_STM_LOGGING
	bool "Application STM logging support"

choice APP_STM_LOGGING_TYPE
	prompt "STM Logging"
	default APP_STM_LOGGING_OFF

config APP_STM_LOGGING_OFF
	bool "Logging disabled"
	help
	  Logging is disabled.

config APP_STM_LOGGING_FSC_FRONTEND
	bool "Human-readable"
	help
	  Logging to STM frontend is enabled on secure domain, application core
	  and PPR. Human readable logs are printed on UART owned by the secure domain.

endchoice
